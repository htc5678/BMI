@model userViewModel
@{int years = Model.age.Days / 365;
    int hr = 220 - years;
    }
<h1 class="text-center">Result!</h1>
<body>
    <table class="table">
        <tr>
            <td>Name:</td>
            <td>@Model.f @Model.l </td>
        </tr>
        <tr>
            <td>Gender:</td>
            <td>@Model.g</td>
        </tr>
        <tr>
            <td>Age:</td>
            <td>@years Years </td>
        </tr>
        <tr>
            <td>Height:</td>
            <td>@Model.h Inches </td>
        </tr>
        <tr>
            <td>Weight:</td>
            <td>@Model.w Pounds </td>
        </tr>
        <tr>
            <td>BMI:</td>
            <td>@Model.bmi kg/m<sup>2</sup></td>
        </tr>
        <tr>
            <td>Target Max Heart Rate:</td>
            <td>@hr BPM</td>
        </tr>
    </table>
</body>

<form method="get" asp-action="chart" class="text-center">
    <button class="btn btn-primary btn-block" type="submit">BMI Chart</button>
</form>